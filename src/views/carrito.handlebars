<div class="card mt-4 p-3 shadow-lg">
    <h1>Mi carrito</h1>
    <ul id="cartContainer"></ul>

    <div class="d-flex justify-content-end">
        <div class="d-flex p-2">
            <h5 class="pe-4">Total:</h5>
            <h5 id="total"></h5>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <form id="createOrderForm">
            <label for="email">Email</label>
            <div class="mb-3">
                <input
                    type="email"
                    id="email"
                    name="email"
                    placeholder="usuario@empresa.com"
                    required
                    readonly
                />
            </div>

            <label for="deliveryAddress">Direcci√≥n de entrega</label>
            <div class="mb-3">
                <input
                    type="text"
                    id="deliveryAddress"
                    name="deliveryAddress"
                    placeholder=""
                    required
                />
            </div>

            <label for="deliveryDate">Fecha de entrega</label>
            <div class="mb-3">
                <input
                    type="date"
                    id="deliveryDate"
                    name="deliveryDate"
                    required
                />
            </div>

            <button type="submit">
                Finalizar compra
            </button>
        </form>
    </div>

</div>

<script src="/js/cart.js"></script>